<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dummy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here's your Meeting link , you can share it with your peers!"
                android:textColor="@color/dk_blu"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meetingLingDialog_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="TextView"
                android:background="@drawable/normal_stroke_drawable"
                android:textColor="@color/black"
                android:layout_margin="12dp"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/link"
                android:drawablePadding="6dp"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="100dp"
                    android:text="Join"
                    android:layout_marginEnd="36dp"
                    android:background="@drawable/button_drawable"
                    android:backgroundTint="@color/lt_green"
                    android:id="@+id/join_dialog_btn"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="100dp"
                    android:background="@drawable/button_drawable"
                    android:id="@+id/share_dialog_btn"
                    android:backgroundTint="@color/dk_red"
                    android:text="share"

                    android:textColor="@color/white"
                    android:layout_height="wrap_content"   />
            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>